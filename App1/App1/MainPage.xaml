             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Kochany Mati!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="StartAndExpand"/>
           
